<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextHabitDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Description"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <EditText
        android:id="@+id/editTextHabitStack"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Habit Stack"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/editTextHabitDescription"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <EditText
        android:id="@+id/editTextRecurrence"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Recurrence"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/editTextHabitStack"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/buttonSubmitHabit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add Habit"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/editTextRecurrence"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
